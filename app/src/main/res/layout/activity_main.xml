<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#515D6A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mainTextViewLoggedIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />
            <EditText
                android:id="@+id/mainEditTextLoginName"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:hint="Name"
                android:singleLine="true" />
            <EditText
                android:id="@+id/mainEditTextLoginPhone"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:hint="PhoneNumber"
                android:singleLine="true"
                android:inputType="number"/>

            <EditText
                android:id="@+id/mainEditTextLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:hint="Email"
                android:singleLine="true" />

            <EditText
                android:id="@+id/mainEditTextLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:hint="Password"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mainButtonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Login"
                android:onClick="Login" />

            <Button
                android:id="@+id/mainButtonSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sign up"
                android:onClick="SignUp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mainTextViewMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test" />

        <Button
            android:id="@+id/mainButtonAllBicycles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="See all bicycles"
            android:padding="20sp"
            android:layout_margin="20sp"
            android:onClick="AllBicycles"/>


    </LinearLayout>

</LinearLayout>